<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>deleteServlet</servlet-name>
        <servlet-class>com.usth.controller.deleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>insertServlet</servlet-name>
        <servlet-class>com.usth.controller.insertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>insertServlet</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>selectAllServlet</servlet-name>
        <servlet-class>com.usth.controller.selectAllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selectAllServlet</servlet-name>
        <url-pattern>/selectAll</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>selectByIdServlet</servlet-name>
        <servlet-class>com.usth.controller.selectByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selectByIdServlet</servlet-name>
        <url-pattern>/selectId</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>selectOneServlet</servlet-name>
        <servlet-class>com.usth.controller.selectOneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selectOneServlet</servlet-name>
        <url-pattern>/selectOne</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateServlet</servlet-name>
        <servlet-class>com.usth.controller.updateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    
<!--    注册监听器-->
<!--    监听器被创建对象后，会默认读取/WEB-INF/ApplicationContext.xml-->
<!--    使用这个指定spring配置文件读取路径-->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:ApplicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
</web-app>